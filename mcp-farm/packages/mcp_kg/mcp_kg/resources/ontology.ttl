@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix dcterms:<http://purl.org/dc/terms/> .
@prefix schema: <https://schema.org/> .
@prefix prov:   <http://www.w3.org/ns/prov#> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix bibo:   <http://purl.org/ontology/bibo/> .
@prefix skos:   <http://www.w3.org/2004/02/skos/core#> .

@prefix fibo:   <https://spec.edmcouncil.org/fibo/ontology/> .
@prefix blon:   <http://purl.org/blondie/ontology/> .
@prefix ethon:  <http://ethon.consensys.net/ontology#> .

@prefix ex:     <https://example.org/crypto-kg#> .

ex:Ontology a owl:Ontology ;
  schema:name "Crypto Research KG" ;
  schema:description "Standards-aligned ontology for MCP-driven crypto research and trading knowledge graph." ;
  dcterms:conformsTo schema:, prov:, bibo:, skos:, fibo:, blon: .

########## CLASSES ##########

# Tokens / Docs / Agents
ex:Token a owl:Class , fibo:FinancialInstrument ;
  rdfs:label "Token (crypto asset)" ;
  schema:description "A crypto token/coin modeled as a financial instrument." ;
  dcterms:conformsTo fibo: .

ex:Whitepaper a owl:Class , bibo:Document , schema:ScholarlyArticle , prov:Entity ;
  rdfs:label "Whitepaper" ;
  schema:description "A project/token whitepaper." ;
  dcterms:conformsTo bibo: .

ex:Agent a owl:Class , prov:Agent , foaf:Agent ;
  rdfs:label "Agent (person or organization)" ;
  schema:description "A person or organization participating in authorship, governance, etc." ;
  dcterms:conformsTo prov: .

ex:Exchange a owl:Class , schema:Organization ;
  rdfs:label "Exchange" ;
  schema:description "An exchange platform (centralized or decentralized)." .

# Strategies / Indicators / Rules / Evidence
ex:Strategy a owl:Class , schema:CreativeWork ;
  rdfs:label "Trading Strategy" ;
  schema:description "A trading strategy extracted from research papers or code." ;
  dcterms:conformsTo schema:CreativeWork .

ex:Indicator a owl:Class , schema:Intangible ;
  rdfs:label "Technical Indicator" ;
  schema:description "An indicator with parameters used by strategies." .

ex:IndicatorUse a owl:Class ;
  rdfs:label "IndicatorUse" ;
  rdfs:comment "Reified use of an Indicator with parameters in a Strategy." .

ex:Rule a owl:Class , schema:Intangible ;
  rdfs:label "Entry/Exit Rule" ;
  schema:description "A rule expressing entry or exit conditions for a strategy." .

ex:EvidenceSpan a owl:Class ;
  rdfs:label "EvidenceSpan" ;
  rdfs:comment "Span of source text supporting a claim/rule (char offsets)." .

ex:Document a owl:Class ;
  rdfs:label "Document" .

ex:ExtractionRun a owl:Class ;
  rdfs:label "ExtractionRun" ;
  rdfs:subClassOf prov:Activity .

########## OBJECT PROPERTIES ##########

ex:describesToken a owl:ObjectProperty ;
  rdfs:domain ex:Whitepaper ;
  rdfs:range  ex:Token ;
  rdfs:label "describes token" .

ex:authoredBy a owl:ObjectProperty ;
  rdfs:domain ex:Whitepaper ;
  rdfs:range  ex:Agent ;
  rdfs:label "authored by" .

ex:cites a owl:ObjectProperty ;
  rdfs:domain ex:Whitepaper ;
  rdfs:range  prov:Entity ;
  rdfs:label "cites" .

ex:derivedFrom a owl:ObjectProperty ;
  rdfs:domain ex:Strategy ;
  rdfs:range  prov:Entity ;
  rdfs:label "derived from" .

ex:targetsToken a owl:ObjectProperty ;
  rdfs:domain ex:Strategy ;
  rdfs:range  ex:Token ;
  rdfs:label "targets token/asset" .

ex:hasSignal a owl:ObjectProperty ;
  rdfs:domain ex:Strategy ;
  rdfs:range  ex:Rule ;
  rdfs:label "has signal" .

ex:usesIndicator a owl:ObjectProperty ;
  rdfs:domain ex:Strategy ;
  rdfs:range  ex:IndicatorUse ;
  rdfs:label "uses indicator (reified)" .

ex:hasRule a owl:ObjectProperty ;
  rdfs:domain ex:Strategy ;
  rdfs:range  ex:Rule ;
  rdfs:label "has rule" .

ex:hasSource a owl:ObjectProperty ;
  rdfs:domain ex:Strategy ;
  rdfs:range  ex:Document ;
  rdfs:label "has source" .

ex:sourceOf a owl:ObjectProperty ;
  rdfs:domain ex:EvidenceSpan ;
  rdfs:range  ex:Rule ;
  rdfs:label "is evidence for" .

prov:wasGeneratedBy rdfs:domain ex:Strategy ; rdfs:range ex:ExtractionRun .
prov:generatedAtTime rdfs:domain ex:ExtractionRun ; rdfs:range xsd:dateTime .

########## DATA PROPERTIES ##########

# Token
ex:symbol a owl:DatatypeProperty ;
  rdfs:domain ex:Token ;
  rdfs:range xsd:string ;
  rdfs:label "ticker symbol" .

schema:name rdfs:domain [ a owl:Class ] ; rdfs:range xsd:string .
schema:description rdfs:domain [ a owl:Class ] ; rdfs:range xsd:string .

# Strategy
ex:family a owl:DatatypeProperty ;
  rdfs:domain ex:Strategy ; rdfs:range xsd:string .
ex:timeframe a owl:DatatypeProperty ;
  rdfs:domain ex:Strategy ; rdfs:range xsd:string .
ex:signature a owl:DatatypeProperty ;
  rdfs:domain ex:Strategy ; rdfs:range xsd:string .

# Rule
ex:direction a owl:DatatypeProperty ;
  rdfs:domain ex:Rule ; rdfs:range xsd:string .
ex:operator a owl:DatatypeProperty ;
  rdfs:domain ex:Rule ; rdfs:range xsd:string .
ex:left     a owl:DatatypeProperty ;
  rdfs:domain ex:Rule ; rdfs:range xsd:string .
ex:right    a owl:DatatypeProperty ;
  rdfs:domain ex:Rule ; rdfs:range xsd:string .
schema:text rdfs:domain ex:Rule ; rdfs:range xsd:string .

# IndicatorUse
ex:params a owl:DatatypeProperty ;
  rdfs:domain ex:IndicatorUse ; rdfs:range rdfs:Resource .

# Evidence Span
ex:start a owl:DatatypeProperty ; rdfs:domain ex:EvidenceSpan ; rdfs:range xsd:integer .
ex:end   a owl:DatatypeProperty ; rdfs:domain ex:EvidenceSpan ; rdfs:range xsd:integer .
ex:page  a owl:DatatypeProperty ; rdfs:domain ex:EvidenceSpan ; rdfs:range xsd:integer .

# Whitepaper metadata
schema:url rdfs:domain [ a owl:Class ] ; rdfs:range xsd:string .
schema:identifier rdfs:domain [ a owl:Class ] ; rdfs:range xsd:string .
ex:publishedOn a owl:DatatypeProperty ;
  rdfs:domain ex:Whitepaper ; rdfs:range xsd:date .

# SKOS for Indicator synonyms
skos:prefLabel rdfs:domain ex:Indicator ; rdfs:range xsd:string .
skos:altLabel  rdfs:domain ex:Indicator ; rdfs:range xsd:string .
